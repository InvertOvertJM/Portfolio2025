/* ORE GUI Overlay */
.ore-gui {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(30, 30, 30, 0.9);
  display: none;
  z-index: 1000;
  color: white;
  font-family: sans-serif;
}

.ore-gui-content {
  position: relative;
  padding: 40px;
  display: flex;
  flex-direction: column;
  gap: 40px;
}

.close-btn {
  position: absolute;
  top: 20px;
  right: 30px;
  font-size: 24px;
  color: white;
  background: none;
  border: none;
  cursor: pointer;
}

/* Ore Row Layout */
.ore-row {
  display: flex;
  align-items: center;
  gap: 40px;
  border-bottom: 2px solid #555;
  padding-bottom: 20px;
}

.ore-shape {
  width: 100px;
  height: 100px;
  background: gray;
  color: black;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  font-weight: bold;
  clip-path: polygon(0% 100%, 20% 0%, 40% 100%, 60% 0%, 80% 100%, 100% 0%);
  cursor: pointer;
}

.ore-shape.bronze {
  background: #a5641c;
}

.ore-shape.white {
  background: #eee;
}

.ore-shape.cyan {
  background: #00dfff;
}

/* Optional: different layout for text areas */
.ore-description {
  flex: 1;
  font-size: 18px;
  line-height: 1.5;
  color: white;
}

<script>
  // Wait for DOM to be ready
  document.addEventListener("DOMContentLoaded", function () {
    const oreGui = document.querySelector(".ore-gui");
    const openBtn = document.querySelector("#openOreGui");
    const closeBtn = document.querySelector(".close-btn");

    // Show the ore GUI
    openBtn.addEventListener("click", function () {
      oreGui.style.display = "block";
    });

    // Hide the ore GUI
    closeBtn.addEventListener("click", function () {
      oreGui.style.display = "none";
    });
  });
</script>
