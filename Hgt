#closePhoneGUI {
  position: absolute;
  top: 10px;
  right: 20px;
  font-size: 24px;
  background: none;
  border: none;
  color: white;
  cursor: pointer;
}

// Open the phone GUI
$("#phoneButton").on("click", function () {
  gsap.to("#phoneGUI", { bottom: 0, duration: 0.4 });
});

// Close the phone GUI
$("#closePhoneGUI").on("click", function () {
  gsap.to("#phoneGUI", { bottom: "-100%", duration: 0.4 });
});
